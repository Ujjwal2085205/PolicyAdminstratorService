@model Insureity_Portal.Models.LoginDetails

@{
    ViewData["Title"] = "Index";
}


<div class="container rounded">
    <div class="row">
        <div class="col-sm">
            <img src="~/Images/policy.png" class="rounded img-thumbnail"/>
        </div>
        <div class="col-md-4 align-self-center">
            <div class="login-form">
                <form asp-action="Login" method="post">
                    <br />
                    <i class="fa-solid fa-user pt-3 d-flex justify-content-center" style="font-size:74px;color:deepskyblue"></i>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Username" class="control-label"></label>

                        <input asp-for="Username" placeholder="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>

                        <input asp-for="Password" placeholder="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-success btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
